.contentTitleWrap {
  padding: 20rpx 0;
  display: flex;
}
.contentTitleWrap .contentTitle {
  padding: 10rpx 20rpx;
  margin-left: 20rpx;
  background-color: #fff;
  border: solid 1rpx #ccc;
}
.contentTitleWrap .active {
  border: solid 1rpx var(--themeColor);
}
.contentItemWrap .contentItem {
  display: flex;
  margin: 20rpx;
  padding: 12rpx;
  background-color: #fff;
}
.contentItemWrap .contentItem .contentItemImage {
  width: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.contentItemWrap .contentItem .contentItemImage image {
  width: 75%;
}
.contentItemWrap .contentItem .contentItemInfo {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.contentItemWrap .contentItem .contentItemInfo .contentItemInfoName {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 26rpx;
}
.contentItemWrap .contentItem .contentItemInfo .contentItemInfoPrice {
  color: var(--themeColor);
}
page {
  background-color: #f1f1f1;
}
