.goodsItem {
  display: flex;
  justify-content: space-between;
  padding: 34rpx 0;
  border-bottom: 2rpx solid #d8d8d8;
}
.goodsItem .goodsItemImg {
  width: 35%;
}
.goodsItem .goodsItemImg navigator {
  display: flex;
  justify-content: center;
  align-items: center;
}
.goodsItem .goodsItemImg navigator image {
  width: 70%;
}
.goodsItem .goodsItemCont {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-right: 30rpx;
}
.goodsItem .goodsItemCont view.goodsItemContTitle {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goodsItem .goodsItemCont .goodsItemContPrice {
  font-size: 32rpx;
  color: var(--themeColor);
}
.ReachBottomTip {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90rpx;
}
